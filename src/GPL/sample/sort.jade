
sort = fn(arr, len){

    i = 0;
    arr_new = [];
    for ( i < len){

        j = 0;
        min = arr_min(arr, len);
        for (j < len){
            if (arr[j] == min){
                arr = pop(arr, j);
                arr_new = push(arr_new, min);
                len = len - 1;
                i = -1;
            }
            j = j + 1;

        }

        i = i + 1;

    }
    return arr_new;
}


arr_min = fn(arr, len){

    i = 0;
    min = arr[0];
    for ( i < len){
        min = MIN(min, arr[i]);
        i = i + 1;
    }
    return min;  
}

arr_max = fn(arr, len){

    i = 0;
    max = arr[0];
    for ( i < len){
        max = MAX(max, arr[i]);
        i = i + 1;
    }
    return max; 

}

pow = fn(num, power){

    i = 0;
    result = 1;
    for (i < power){
        result = result * num;
        i = i + 1;
    }

    return result;

}

MIN = fn(n, m){
    if (n < m) {
        return n;
    } else {
        return m;
    }
}

MAX = fn(n, m) {
    if (n > m) {
        return n;
    } else {
        return m;
    }
}

array_generator = fn(len, limit){

    i = 0;
    arr = [];

    for (i < len){
        n = rand(limit) + pow(-1, i + 1) * (i + 1) * rand(100)/50; 
        arr = push(arr, n);
        i = i + 1;
    }
    return arr;
}

